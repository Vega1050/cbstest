<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_company_form_inherit" model="ir.ui.view">
      <field name="name">res.company.form.inherit</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <page name="general_info" position="after">
          <page string="Report Configuration" name="report_configuration">
            <group>
              <group>
                <field name="background_image" widget="image"/>
                <field name="footer_left" widget="colorpicker"/>
                <field name="footer_right" widget="colorpicker"/>
              </group>
              <group>
                <field name="table_header" widget="colorpicker"/>
                <field name="terms"/>
              </group>
            </group>
          </page>
        </page>
      </field>
    </record>
  </data>
</odoo>
